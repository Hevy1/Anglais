<BorderPane fx:controller="controllers.MainPageController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <fx:include source="BarreHaut.fxml" />
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="700" spacing="20">
            <Label text="Choose the mode :"/>
            <Button fx:id="order" text="Find the word" onAction="#orderPage"/>
            <Button fx:id="remind" text="Remember the word" onAction="#remindPage"/>
            <Button fx:id="record" text="Word history" onAction="#historyPage"/>
        </VBox>
    </center>
    <bottom>

    </bottom>
</BorderPane>